<h1>Burgers</h1>

<h2>time to eat</h2>





<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=1}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Buger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
    <input type="radio" name="devoured" value="1" checked> devoured<br>
    <input type="radio" name="devoured" value="0"> havent eaten yet
  </div>

  <button type="submit">Add Burger</button>
</form>